<h1><%= @cocktail.name %></h1>
<ul>
<% @doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %> (<%= link_to "delete", dose_path(dose), method: :delete %>)</li>
  <br>
<% end %>
</ul>
<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "See all cocktails", cocktails_path %></p>
